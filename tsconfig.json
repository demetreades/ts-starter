{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // "sourceMap": true,
    // "allowJs": true,
    // "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@/api/*": ["./api/*"],
      "@/config/*": ["./config/*"],
      "@/repository/*": ["./repository/*"],
      "@/services/*": ["./services/*"],
      "@/utils/*": ["./utils/*"]
    }
  },
  "exclude": ["node_modules", "build", "coverage", "tests"],

  "include": ["./src/**/*"]
}
