{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "@utils": ["src/utils"],
      "@config": ["src/config"],
      "@services": ["src/services"]
    },
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "**/*.spec.ts", "build", "coverage", "tests"],
  "include": ["src/**/*"]
}
